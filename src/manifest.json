{
    "manifest_version": 2,
    "name": "Html Table Flipper",
    "short_name": "Table Flipper",
    "description": "The best way to deal with HTML tables, packaged into an extension for easy flipping.",
    "author": "Reddit (:",
    "version": "1.0",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "jquery-3.1.1.min.js",
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    }
}